<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to WalletShare"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
    android:src="@drawable/baseline_settings_24"
    android:layout_alignParentStart="true"
    />

    <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_person_24"
            android:layout_alignParentEnd="true"
    />

    <TextView
            android:id="@+id/textViewFeedback"
            android:text="Please leave us some feedback below :)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/titleHome"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp" android:layout_marginTop="50dp" android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" android:layout_marginBottom="50dp"/>

    <RatingBar
    android:id="@+id/userRating"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/textViewFeedback"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>

    <EditText
    android:id="@+id/feedbackEt"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_below="@+id/userRating"
    android:padding="15sp"
     android:layout_margin="20sp"   />

    <Button
    android:id="@+id/feedbackBtn"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="20sp"
    android:layout_below="@+id/feedbackEt"
    android:text="SEND FEEDBACK"
    android:backgroundTint="@color/purpureous"
    android:textColor="@color/white"/>

</RelativeLayout>