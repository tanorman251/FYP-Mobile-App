<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:textColor="@color/richBlack"
            android:id="@+id/adviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advice"
            android:textSize="25sp"
            android:textStyle="bold" android:layout_marginTop="16dp" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>

    <Spinner
    android:id="@+id/filterAdvice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/adviceTitle"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"/>

    <ListView
    android:id="@+id/adviceList"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:layout_below="@+id/filterAdvice"
android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_alignParentBottom="false"
    />

    <Button
            android:id="@+id/chatbotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press Here to Ask somthing else"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/adviceList"
android:layout_marginBottom="70dp"
            android:layout_marginTop="5dp"
    android:backgroundTint="@color/purpureous"
    android:textColor="@color/white"/>



</RelativeLayout>